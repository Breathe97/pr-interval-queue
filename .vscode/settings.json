{
  // ----------------------- 个人常用
  // 颜色主题
  // "workbench.colorTheme": "Monokai",
  // 文件夹图标
  // "workbench.iconTheme": "material-icon-theme",
  // 自定义颜色
  // "workbench.colorCustomizations": {
  //   "editor.selectionHighlightBorder": "#0097ff",
  //   "editor.selectionBackground": "#0099ff97",
  //   "editor.findMatchBorder": "#f81212"
  // },
  // 关闭git警告 (不用vscoed的git插件 用不来)
  // "git.ignoreMissingGitWarning": true,
  // 打开编辑器 命令行控制台
  // "window.commandCenter": true,
  // 删除文件时不需要确认
  // "explorer.confirmDelete": false,
  // 重命名ts文件时 自动更新引入
  // "typescript.updateImportsOnFileMove.enabled": "always",
  // 不受信任的文件也可以直接打开
  // "security.workspace.trust.untrustedFiles": "open",
  // 提交的时候默认直接暂存所有
  // "git.enableSmartCommit": true,
  // 同步的时候不用确认
  // "git.confirmSync": false,

  // ----------------------- 通用建议

  // 制表符为2个空格
  "editor.tabSize": 2,
  // 去除dom中函数括号里面的提示 $event=>
  "editor.inlayHints.enabled": "off",
  // 显示建议的时候每次都是选择第一个建议
  "editor.suggestSelection": "first",
  // 当文件中只有一个子项目时以资源路径显示
  "explorer.compactFolders": false,
  // 为false的时候 选择一个提示之后继续写会继续提示你（比如写css行内样式的时候）
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  // 不要还不行  设置置顶自定义代码片段
  "editor.snippetSuggestions": "inline",
  // 去掉中横线分割字符（双击短横线可以选中整个单词）
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  // 自动补全的时候取消补全分号 因为行内style首次补全 光标总是会落到分号后面（去你妈的 什么玩意儿 难受）
  "css.completion.completePropertyWithSemicolon": false,
  // 既然scss取消了 那less也取消吧
  "scss.completion.completePropertyWithSemicolon": false,
  // 既然css取消了 那less也取消吧
  "less.completion.completePropertyWithSemicolon": false,
  // 对.env 增加语言识别
  "files.associations": { ".env.*": "properties" },
  // 禁用自动导入建议
  "typescript.suggest.autoImports": false,
  // 缩进字节数
  "prettier.tabWidth": 2,
  // 换行字节数
  "prettier.printWidth": 480,
  // 换行不使用tab，使用空格
  "prettier.useTabs": false,
  // 优先使用单引号
  "prettier.singleQuote": true,
  // 是否使用分号结束
  "prettier.semi": false,
  // 反正就是dom换行更好看 不会出现单独一行一个的小箭头
  "prettier.bracketSameLine": true,
  // 其他语言选择格式化
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
